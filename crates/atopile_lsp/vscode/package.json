{
  "name": "atopile-analyzer",
  "description": "atopile language server",
  "author": "Diode Computers, Inc.",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/diodeinc/atopile-analyzer"
  },
  "publisher": "diodeinc",
  "categories": [],
  "keywords": [
    "atopile"
  ],
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:ato",
    "onCommand:atopile.openPreview"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "atopile.openSchematic",
        "title": "Open Schematic",
        "category": "atopile"
      }
    ],
    "languages": [
      {
        "id": "ato",
        "aliases": [
          "atopile",
          "ato"
        ],
        "extensions": [
          ".ato"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ato",
        "scopeName": "source.ato",
        "path": "./ato.tmLanguage.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "atopile.preview",
        "displayName": "Atopile Preview",
        "selector": [
          {
            "filenamePattern": "*.ato"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && cd preview && npm run build",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd .. && cd preview && npm install && cd .."
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^5.2.0",
    "@types/node": "^20",
    "eslint": "^9.13.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.11.0"
  }
}
